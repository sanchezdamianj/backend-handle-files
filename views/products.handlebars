<section class='p-2 bg-black rounded text-center'>
	<h2 class='text-white'>Product view</h2>
	{{#if products}}
		<table class='table table-dark'>
			<thead>
				<tr>
					<th>Name</th>
					<th>Price</th>
					<th>Picture</th>
				</tr>
			</thead>
			<tbody>
				{{#each products}}
					<tr class='text-center'>
						<td class='align-middle'>{{this.name}}</td>
						<td class='align-middle'>{{this.price}}</td>
						<td class='align-middle'>
							<img src='{{this.picture}}' alt='{{this.name}}' />
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		<h2 class='bg-light p-4 text-danger'>No products in store</h2>
	{{/if}}
	<div class='mt-3'>
		<a href='/products'>
			<button class='btn btn-warning'>Add Product</button>
		</a>
	</div>
</section>